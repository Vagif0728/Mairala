@model List<Employee>

@{
    int count = 0;
}



<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Table</h4>
            <a class="btn btn-danger" asp-action="create" asp-controller="employee" asp-area="admin">Create Table</a>
            
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Photo</th>
                            <th>Name</th>
                            <th>Department</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee employee in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="~/assets/images/@employee.Image">
                                   
                                </td>
                                <td>@employee.Name</td>
                                <td>@employee.Department</td>
                                <td>
                                    <a asp-action="update" asp-controller="employee"  asp-route-id="@employee.Id" class="btn btn-danger">Update</a>
                                    <a asp-action="deletefile" asp-controller="employee"  asp-route-id="@employee.Id" class="btn btn-primary">Delete</a>
                                </td>

                            </tr>
                        }

                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
